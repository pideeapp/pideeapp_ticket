<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<style>
  body {
    width: 72mm;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    margin: 0;
    padding: 0;
  }

  .center { text-align: center; }
  .bold { font-weight: bold; }

  .title {
    font-size: 18px;
    font-weight: bold;
  }

  .order {
    font-size: 16px;
    margin: 4px 0;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  th, td {
    padding: 2px 0;
  }

  th {
    text-align: left;
    border-bottom: 1px dashed #000;
  }

  .right { text-align: right; }

  .line {
    border-top: 1px dashed #000;
    margin: 6px 0;
  }

  .totals td {
    padding: 2px 0;
  }

  .total-final {
    font-size: 16px;
    font-weight: bold;
  }

  .adicional {
    font-size: 11px;
    padding-left: 8px;
  }

  .comment {
    margin-top: 8px;
    font-size: 11px;
  }
</style>
</head>
<body>

<div class="center title">{{company.name}}</div>

<div class="center order bold">{{order.id}}</div>
<div class="center">{{order.date}}</div>

<div class="line"></div>

<table>
  <thead>
    <tr>
      <th>Producto</th>
      <th class="right">Cant</th>
      <th class="right">Total</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{name}}</td>
      <td class="right">x{{quantity}}</td>
      <td class="right">{{total}}</td>
    </tr>

    {{#if adicionales}}
    <tr>
      <td colspan="3" class="adicional">
        <strong>Adicionales:</strong><br/>
        {{adicionales}}
      </td>
    </tr>
    {{/if}}

    {{/each}}
  </tbody>
</table>

<div class="line"></div>

<table class="totals">
  <tr>
    <td>Subtotal:</td>
    <td class="right">{{subtotal}}</td>
  </tr>
  <tr>
    <td>Env√≠o:</td>
    <td class="right">{{shipping}}</td>
  </tr>
  <tr class="total-final">
    <td>Total:</td>
    <td class="right">{{total}}</td>
  </tr>
</table>

{{#if comment}}
<div class="comment">
  <strong>Comentarios:</strong><br/>
  {{comment}}
</div>
{{/if}}

</body>
</html>
